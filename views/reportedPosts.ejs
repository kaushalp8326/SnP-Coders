<%- include("adminheader") -%>

<section class="testimonials2 studiom4_testimonials2 vertical-line cid-sq4XL8SNzK" id="testimonials2-j">
	<div class="container">
		<div class="row">
			<div class="title col-12 align-center">
				<h3 class="mbr-section-subtitle mbr-bold mbr-fonts-style display-7">Reported Posts</h3>
				<h2 class="mbr-bold mbr-fonts-style mbr-section-title mbr-white display-2">Posts to Review</h2>
			</div>
            <% for (var i = 0; i < posts.length; i++) { %>
                <% if (posts[i].isVisible==true) { %>
                    <div class="card col-12 col-md-6 col-lg-4" style="padding: 15px;">
                        <div class="card-inner">
                            <div class="card-img align-left">
                                <% karma = posts[i].likes.length - posts[i].dislikes.length %>
                                <% if (Math.abs(karma) > 9999 && Math.abs(karma) < 1000000) { %>
                                    <% karma = (karma / 1000).toFixed(1)%>
                                    <span style="color: #f0ad4e; padding-right: 15px"><%= karma %>k</span>
                                <% } else if (Math.abs(karma) > 1000000){ %>
                                    <% karma = (karma / 1000000).toFixed(2)%>
                                    <span style="color: #f0ad4e; padding-right: 15px"><%= karma %>m</span>
                                <% } else { %>
                                    <span style="color: #f0ad4e; padding-right: 15px"><%= karma %></span>
                                <% } %>
                                <% if (user.isAdmin) { %>
                                    <a href="/ignore/postId/<%= posts[i]._id %>" class="fas fa-check" style="padding-right: 15px;color:#f0ad4e;" onmouseout="this.style.color='#f0ad4e'" onmouseover="this.style.color='#e1201d'"></a>
                                    <a href="/delete/postId/<%= posts[i]._id %>" class="far fa-trash-alt" style="padding-right: 15px;color:#f0ad4e;" onmouseout="this.style.color='#f0ad4e'" onmouseover="this.style.color='#e1201d'"></a>
                                    <a href="/ban/username/<%= posts[i].author %>" class="fas fa-ban" style="padding-right: 15px;color:#f0ad4e;" onmouseout="this.style.color='#f0ad4e'" onmouseover="this.style.color='#e1201d'"></a>
                                <% } %>
                
                            </div>
                            <div class="card-box">
                                <p class="mbr-text align-left mbr-fonts-style display-7">
                                    <%= posts[i].text %>
                                </p>
                                <p class="mbr-text align-left mbr-fonts-style display-7">
                                    Interest: <%= posts[i].interest %>
                                </p>
                                <div class="card-people">
                                    <div class="user_image">
                                        <img src="assets/images/mbr-455x455.png" alt="">
                                    </div>
                                    <div class="wrapper-name">
                                        <a href="/profile/<%= posts[i].author %>" class="mbr-author-name mbr-semibold mbr-fonts-style mbr-white display-7" style="color: #fff;" onmouseout="this.style.color='#fff'" onmouseover="this.style.color='#e1201d'">
                                            <%= posts[i].author %>
                                        </a>
                                        <div class="mbr-author-desc mbr-fonts-style display-4">
                                            <%= posts[i].date.toDateString() %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>        
            <% } %>
		</div>
	</div>
</section>

<%- include("footer") -%>